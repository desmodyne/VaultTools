    echo -n '    enable auth method: '
    if output="$(curl "${curl_args[@]}"                     \
                      --data    "${req_data}"               \
                      --header  "X-Vault-Token: ${token}"   \
                      --request POST                        \
                      "${full_url}" 2>&1)"
    then
        if err_resp="$(check_response "${output}" 2>&1)"
        then
            echo 'OK'
        else
            if [ "${err_resp}" = "path is already in use at token/" ]
            then
                echo 'IGNORE ERROR'
